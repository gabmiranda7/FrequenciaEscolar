@using FrequenciaEscolar.Dto
@model TurmaCriacaoDto

<div class="container mt-5">
    <form method="post" asp-action="Cadastrar" asp-controller="Turma">
        <h2>Cadastrar Turma</h2>

        <div class="mb-1">
            <label class="form-label">Nome:</label>
            <input type="text" asp-for="Nome" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Ano:</label>
            <input type="text" asp-for="Ano" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Ano"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Professor:</label>
            <select asp-for="ProfessorId" asp-items="ViewBag.Professores" class="form-control shadow-none">
                <option value="">Selecione um professor</option>
            </select>
            <span class="text-danger" asp-validation-for="ProfessorId"></span>
        </div>

        <div class="btn-box d-flex mt-3">
            <button type="submit" class="btn btn-success w-50 mx-1"><i class="bi bi-plus-circle"></i> Cadastrar</button>
            <a class="btn btn-info w-50" asp-controller="Turma" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
        </div>
    </form>
</div>
