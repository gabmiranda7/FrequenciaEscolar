@model IEnumerable<FrequenciaEscolar.Models.Aluno>

@{
    ViewData["Title"] = "Lista de Alunos";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

<div class="py-5">
    <div class="container">

        <!-- Botão Cadastrar -->
        <div class="text-center mb-5">
            <a class="btn btn-success" asp-action="Cadastrar" asp-controller="Aluno">Cadastrar Aluno</a>
        </div>

        <!-- Cartões dos Alunos -->
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-0">
            @if (Model != null && Model.Any())
            {
                @foreach (var aluno in Model)
                {
                    <div class="card mx-3 my-3 p-2" style="width: 12rem;">
                        <div class="card-body">
                            <h5 class="card-title">@aluno.Nome</h5>
                            <p class="card-text">RA: @aluno.Matricula</p>
                        </div>
                        <div class="card-body">
                            <a class="btn btn-info w-100 mb-1" asp-action="Detalhes" asp-controller="Aluno" asp-route-id="@aluno.Id">Detalhes</a>
                            <a class="btn btn-warning w-100 mb-1" asp-action="Editar" asp-controller="Aluno" asp-route-id="@aluno.Id">Editar</a>
                            <a class="btn btn-danger w-100" asp-action="Remover" asp-controller="Aluno" asp-route-id="@aluno.Id">Remover</a>
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Tabela de Alunos -->
        <h3 class="mt-5">Tabela de Alunos</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>RA</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var aluno in Model)
                {
                    <tr>
                        <td>@aluno.Nome</td>
                        <td>@aluno.Matricula</td>
                        <td>
                            <a asp-action="Detalhes" asp-route-id="@aluno.Id" class="btn btn-info btn-sm">Detalhes</a>
                            <a asp-action="Editar" asp-route-id="@aluno.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Remover" asp-route-id="@aluno.Id" class="btn btn-danger btn-sm">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Paginação -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (currentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(currentPage - 1)">Anterior</a>
                    </li>
                }

                @for (int i = 1; i <= totalPages; i++)
                {
                    if (i == currentPage)
                    {
                        <li class="page-item active"><span class="page-link">@i</span></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="?page=@i">@i</a></li>
                    }
                }

                @if (currentPage < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(currentPage + 1)">Próxima</a>
                    </li>
                }
            </ul>
        </nav>

    </div>
</div>
