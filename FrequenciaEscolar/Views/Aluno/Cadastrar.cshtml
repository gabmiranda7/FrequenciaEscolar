@using FrequenciaEscolar.Dto
@model AlunoCriacaoDto

<div class="container mt-5">
    <form method="post" asp-action="Cadastrar" asp-controller="Aluno">
        <h2>Cadastrar Aluno</h2>

        <div class="mb-1">
            <label class="form-label">Nome:</label>
            <input type="text" asp-for="Nome" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Matricula:</label>
            <textarea type="text" asp-for="Matricula" class="form-control shadow-none"> </textarea>
            <span class="text-danger" asp-validation-for="Matricula"></span>
        </div>

        <div class="btn-box d-flex mt-3">
            <button type="button" class="btn btn-success w-50 mx-1"><i class="bi bi-plus-circle"></i> Cadastrar</button>
            <a type="submit" class="btn btn-info w-50" asp-controller="Aluno" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
        </div>
    </form>
</div>