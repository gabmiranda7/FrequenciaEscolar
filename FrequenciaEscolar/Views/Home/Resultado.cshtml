@model FrequenciaEscolar.ViewModel.PesquisaViewModel

<div class="container py-5">
    <h3 class="mb-4">Resultados para: <span class="text-primary">"@Model.Termo"</span></h3>

    @if (Model.Alunos.Any())
    {
        <h4>Alunos</h4>
        <ul class="list-group mb-4">
            @foreach (var aluno in Model.Alunos)
            {
                <li class="list-group-item">@aluno.Nome</li>
            }
        </ul>
    }

    @if (Model.Professores.Any())
    {
        <h4>Professores</h4>
        <ul class="list-group mb-4">
            @foreach (var prof in Model.Professores)
            {
                <li class="list-group-item">@prof.Nome</li>
            }
        </ul>
    }

    @if (Model.Turmas.Any())
    {
        <h4>Turmas</h4>
        <ul class="list-group">
            @foreach (var turma in Model.Turmas)
            {
                <li class="list-group-item">
                    @turma.Nome - Ano: @turma.Ano
                    @if (turma.Professor != null)
                    {
                        <small class="text-muted ms-2">(Prof: @turma.Professor.Nome)</small>
                    }
                </li>
            }
        </ul>
    }

    @if (!Model.Alunos.Any() && !Model.Professores.Any() && !Model.Turmas.Any())
    {
        <div class="alert alert-warning mt-4">
            Nenhum resultado encontrado.
        </div>
    }

    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-4">
        <i class="fas fa-arrow-left me-1"></i> Voltar para Início
    </a>
</div>
